<h1>GOIN FISHIN!</h1>

<table>
  <tr>
    <th></th>
    <% @fish_types.each do |fish_type| %>
      <th><%= fish_type.name %></th>
    <% end %>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td style="min-width:50px"><%= user.nickname %></td>
    <% @fish_types.each do |fish_type| %>
      <td class="fish" onClick="window.location.href = '/fishing/catch?fish_type_id=<%= fish_type.id %>&user_id=<%= user.id %>'" ></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Catch', new_catch_path %>
